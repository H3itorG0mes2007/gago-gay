<Login>:
    orientation: "vertical"
    padding: 50
    spacing: 10

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Cor de fundo branco
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        text: "LOGIN"
        font_size: 40
        color: 0, 0.7, 1, 1

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        spacing: 10

        Label:
            text: "Nome de usuário:"
            size_hint_x: None
            width: self.texture_size[0]
            color: 0, 0.7, 1, 1

        TextInput:
            hint_text: "Nome de usuário"
            background_color: 0.9, 0.9, 0.9, 1  # Cor de fundo mais clara
            foreground_color: 0, 0, 0, 1  # Cor do texto preto

    BoxLayout:
        size_hint_y: None
        height: "40dp"
        spacing: 10

        Label:
            text: "Senha:"
            size_hint_x: None
            width: self.texture_size[0]
            color: 0, 0.7, 1, 1

        TextInput:
            hint_text: "Senha"
            password: True
            background_color: 0.9, 0.9, 0.9, 1
            foreground_color: 0, 0, 0, 1

    Button:
        text: "Entrar"
        size_hint_y: None
        height: "40dp"
        background_color: 0, 0.7, 1, 1

    Button:
        text: "Registrar"
        size_hint_y: None
        height: "40dp"
        background_color: 0, 0.5, 0.1, 1
